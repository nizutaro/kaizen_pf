<h2>職種一覧</h2>
  <div class="row">
    <div class="col-md-12">
      <div class= "form-group"> 
        <%= form_with model:[@job] do |f| %>
      </div>
      <div class= "form-group">
        <%= f.label :"職種名" %>
        <%= f.text_field :name %>
      </div>  
      <div class= "form-group">
        <%= f.label :"金額" %>
        <%= f.text_field :amount %>
      </div>  
    </div>
    <%= f.submit :"職種の追加",  class:"btn btn-primary" %>
    <% end %>
  </div>
    <!-- 職種一覧 -->
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <tr>
        <th>No.</th>
        <th>名前</th>
        <th>金額</th>
        <th></th>
        <th></th>
        </tr>
        <% @jobs.each do |job| %>
          <tr>
            <td><%= job.id %></td>
            <td><%= job.name %></td>
            <td><%= job.amount  %> 円</td>
            <td>
              <%= link_to("編集",edit_job_path(job), {class: "btn btn-success"}) %>
              <%= link_to("削除", job_path(job), method: :delete, class: "btn btn-danger pull-right") %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>