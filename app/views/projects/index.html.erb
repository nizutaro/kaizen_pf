<h2 class="page-header text-center border-bottom">提案一覧</h2>
<div class="row">
  <div class="col-md-12">
    <%= link_to "提案する",new_project_path, {class: "btn btn-success"} %>
    <canvas id="myChart" width="900" height="400"></canvas>
<script>
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ["4月","5月","6月","7月","8月","9月","10月","11月","12月"],
        datasets: [{
            label: "削減総時間",
            data: [1,24,3,23,3,6,7,48,9,5,11,20],
            backgroundColor: 'rgba(255, 99, 132, 1.0)',
            borderColor: 'rgba(255, 50, 132, 1.0)',
            fill: false
        }]
    },
    options: {
        title:  {
          display: true,
          text: "タイトル"
        }
    }
});
</script>
  </div>
</div>
<div class="row">
  <% @projects.each do |project| %>
    <table class="table">
    <tr>
      <td><%= project.id %></td>
      <td><%= project.name %></td>
      <td><%= project.content %></td>
      
    </tr>
    </table>
  <% end %>
</div>